# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8

[**.{js,babelrc}]
indent_style = space
indent_size = 2

# Tabs in less
[**.less]
indent_style = tab
indent_size = 2

[**.scss]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2